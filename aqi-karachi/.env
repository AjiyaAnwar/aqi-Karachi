# ============================================
# AQI KARACHI - PRODUCTION CONFIGURATION
# ============================================

# ====================
# MONGODB ATLAS CONFIGURATION
# ====================
MONGODB_URI=mongodb+srv://user:user@cluster0.pj50bgz.mongodb.net/aqi_predictor?retryWrites=true&w=majority&appName=Cluster0
MONGODB_DATABASE=aqi_predictor

# Feature Store Databases
FEATURE_STORE_DB=aqi_feature_store
MODEL_REGISTRY_DB=aqi_model_registry
LOGS_DB=aqi_pipeline_logs

# MongoDB Connection Settings
MONGODB_CONNECT_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=30000
MONGODB_BATCH_SIZE=100

# ====================
# OPEN-METEO API CONFIGURATION
# ====================
CITY_NAME=Karachi
CITY_LAT=24.8607
CITY_LON=67.0011
TIMEZONE=Asia/Karachi

# ====================
# DATA COLLECTION SETTINGS
# ====================
HISTORICAL_DAYS=45
COLLECTION_INTERVAL_HOURS=1

# ====================
# FEATURE ENGINEERING SETTINGS
# ====================
FEATURE_VERSION_FORMAT=%Y%m%d_%H%M
NAN_THRESHOLD=0.3
EDA_OUTPUT_DIR=eda_output
EDA_DAYS_TO_ANALYZE=45

# ====================
# MODEL TRAINING SETTINGS
# ====================
TRAINING_THRESHOLD=0.7
MODEL_PROMOTION_THRESHOLD=0.75
DATA_RETENTION_DAYS=30
ENABLE_DATA_CLEANUP=true

# ====================
# LOCAL DEVELOPMENT
# ====================
GITHUB_RUN_ID=local_run
GITHUB_SHA=local_commit
GITHUB_EVENT_NAME=manual
GITHUB_ACTIONS=false
GITHUB_REF=refs/heads/main

# ====================
# DASHBOARD SETTINGS
# ====================
DASHBOARD_PORT=8501
DASHBOARD_THEME=light

# ====================
# LOGGING SETTINGS
# ====================
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_RETENTION_DAYS=7
ENABLE_MONGO_LOGGING=true
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true